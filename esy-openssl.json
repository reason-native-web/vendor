{
  "name": "@reason-native-web/esy-openssl",
  "version": "1.1.1002",
  "description": "Mirror of OpenSSL",
  "license": "Apache 2.0",
  "files": ["openssl"],
  "esy": {
    "build": [
      [
        "bash",
        "-c",
        "#{os == 'windows' ? '(cd openssl; patch -p1) < openssl-1.1.1d-mingw.patch' : 'true'}"
      ],
      [
        "bash",
        "-c",
        "#{os == 'windows' ? './openssl/configure mingw64 --prefix=$cur__install --openssldir=$cur__install/ssl --cross-compile-prefix=x86_64-w64-mingw32-' : './openssl/config --prefix=$cur__install --openssldir=$cur__install/ssl'}"
      ],
      [
        "make", 
        "-j4"
      ]
    ],
    "install": [
      [
        "make",
        "install"
      ],
      [
        "bash",
        "-c",
        "mkdir -p #{self.install / 'ssl'}"
      ],
      [
        "bash",
        "-c",
        "mv openssl/apps/cert.pem #{self.install / 'ssl'}"
      ]
    ],
    "buildsInSource": true,
    "exportedEnv": {
      "LD_LIBRARY_PATH": {
        "val": "#{self.lib : $LD_LIBRARY_PATH}",
        "scope": "global"
      },
      "OPENSSL_LIB_PATH": {
        "val": "#{self.lib}",
        "scope": "global"
      },
      "OPENSSL_INCLUDE_PATH": {
        "val": "#{self.install / 'include'}",
        "scope": "global"
      },
      "OPENSSL_BIN_PATH": {
        "val": "#{self.bin}",
        "scope": "global"
      },
      "PKG_CONFIG_PATH": {
        "val": "#{self.lib / 'pkgconfig'}",
        "scope": "global"
      }
    }
  },
  "dependencies": {
    "@opam/conf-autoconf": "esy-packages/esy-autoconf:package.json#fb93edf",
    "@opam/conf-pkg-config": "*"
  }
}
